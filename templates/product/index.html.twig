{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<h1>Products</h1>
<table>
     <thead>
         <tr>
             <th>Name</th>
             <th>Descr</th>
             <th>Size</th>
         </tr>
     </thead>
     <tbody>
         {% for product in products %}
              <tr>
                  <th>
                      <a href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a>
                  </th>
                  <th>{{ product.description }}</th>
                  <th>{{ product.size }}</th>
              </tr>
         {% endfor %}
     </tbody>
</table>
{% endblock %}
